@using GuessWhoOnePiece.UI.Picture
@inject IJSRuntime JS

<div id="answerCard" class="answer-circle @DefineColor()">
    @if (!string.IsNullOrEmpty(AnswerImage) && string.IsNullOrEmpty(AnswerText))
    {
        <div class="answer-picture">
            <Picture PicturePath="@AnswerImage" />
        </div>
    }
    else if (!string.IsNullOrEmpty(AnswerImage))
    {
        <div class="answer-picture">
            <Picture PicturePath="@AnswerImage" />
        </div>
        <label id="answerText" class="answer-text">@AnswerText</label>
    }
    else 
    {
        <label id="answerText" class="answer-text">@AnswerText</label>
    }
</div>